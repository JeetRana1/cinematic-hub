rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Simple rule: authenticated users can do anything with their own user data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      match /{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}

