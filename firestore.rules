rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write anything under their user ID
    match /users/{userId} {
      allow create, read, write: if request.auth != null && request.auth.uid == userId;
      
      // All subcollections and nested documents under a user
      match /{allPaths=**} {
        allow create, read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}

